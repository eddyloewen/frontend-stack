{
    "root": true,
    "extends": ["plugin:prettier/recommended"],
    "rules": {
        "prettier/prettier": "error"
    },
    "globals": {
        "document": true,
        "window": true,
        "customElements": true,
        "HTMLElement": true,
        "requestAnimationFrame": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true
    }
}
